<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.lgw.android.jetpack.databinding.MainActivity7.Handler" />

        <import type="com.lgw.android.jetpack.databinding.UserBean" />

        <variable
            name="handler"
            type="Handler" />

        <variable
            name="userInfo"
            type="UserBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".databinding.MainActivity7">

        <Button
            android:id="@+id/btn_show"
            style="@style/BtnStyle"
            android:onClick="@{handler::onClick}"
             android:text="显示" />


        <include
            layout="@layout/view_include"
            bind:userInfo1="@{userInfo}" />

        <ViewStub
            android:id="@+id/view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/view_stub"
            bind:userInfo="@{userInfo}" />






    </LinearLayout>
</layout>